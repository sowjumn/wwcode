

<div class="unit col1of4">
  <div class="row recent-posts inner">Recent Posts</div>
  <% @blogs_all.each do |blog| %>
  <div class="row nav-blog horizontal-double-inner">
    <%= link_to blog.title, blog_path(blog) %>
  </div>
  <% end %>
</div>

<div class="unit col2of3">
  <% @blogs_all.each do |blog| %>
  <div class="each-blog double-inner">
    <div class="blog-title"><%=blog.title%></div>
    <p><%=blog.para1%>...</p>
    <div class="row">
      <% if signed_in? %>
        <%= link_to 'edit', edit_blog_path(blog)%>
        <%= link_to 'Delete Blog', {controller: 'blogs', action: 'destroy', id: blog.id}, method: :delete %>
      <% end %>
      <div class="blog-author">---<%=blog.author%></div>
    </div>
  </div>
<% end %>
</div>
