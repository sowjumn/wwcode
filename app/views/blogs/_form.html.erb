<%= form_for(@blog) do |f| %>
<div class="row">
  <%= f.label  :title %>
</div>
<div class="row">
  <%= f.text_field :title %>
</div>

<div class="row">
  <%= f.label :paragraph1 %>
</div>

<div class="row bottom-inner">
  <%= f.text_area :para1, size: "100x10" %>
</div>

<div class="row">
  <%= f.label :paragraph2 %>
</div>
<div class="row bottom-inner">
  <%= f.text_area :para2, size: "100x10" %>
</div>

<div class="row">
  <%= f.label :paragraph3 %>
</div>
<div class="row bottom-inner">
  <%= f.text_area :para3, size: "100x10" %>
</div>

<div class="row">
  <%= f.label :author %>
</div>
<div class="row bottom-inner">
  <%= f.text_field :author %>
</div>

  <div class="row">
    <%= f.submit %>
  </div>

  <% end %>